---
interface Props {
  href: string;
  classes?: string;
  target?: string;
  onclick?: string;
}

const { href, classes, target, onclick } = Astro.props;
---

<a
  onclick={onclick}
  class={classes ? classes : 'normal'}
  href={href}
  target={target ? target : '_blank'}><slot /></a
>

<style>
  a {
    color: black;
  }

  a:hover {
    color: #06f;
  }

  .normal {
    text-decoration: none;
  }

  .contact {
    font-size: 17px;
  }

  .nav {
    font-size: 25px;
    text-decoration: none;
  }
</style>
