---
interface Props {
  classes?: string;
  src: string;
  alt?: string;
  width?: string;
}

const { classes, src, alt, width } = Astro.props;
const notLazy = ['band', 'fatmusik', 'menu', 'socialItem'].includes(classes ? classes : '');
---

{
  classes === 'band' && (
    <img
      loading={notLazy ? 'eager' : 'lazy'}
      class={classes}
      src={src}
      alt={alt}
      width={width}
      onclick="document.querySelector('main').scrollTo(0, 0), location.hash = ''"
    />
  )
}
{
  classes !== 'band' && (
    <img loading={notLazy ? 'eager' : 'lazy'} class={classes} src={src} alt={alt} width={width} />
  )
}

<style>
  img {
    scale: 0.9;
    transition: scale 0.2s;
  }

  img:hover {
    scale: 1;
  }

  .band {
    height: 67.5px;
    width: 67.5px;
    margin: 2px 0;
    cursor: pointer;
  }

  .fatmusik {
    height: 50px;
    width: 50px;
  }

  .menu {
    height: 64px;
    width: 64px;
    cursor: pointer;
  }

  .socialItem {
    width: 70px;
    height: 70px;
  }
</style>
