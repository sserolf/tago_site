---
interface Props {
  data: {
    title: string;
    img: string;
  }[];
}

const { data } = Astro.props;
---

<header>
  {
    data.map((item) => {
      if (item.title === 'band') {
        return <img class={item.title} src={item.img} alt={item.title} width={50} height={50} />;
      } else if (item.title === 'menu') {
        return <img class={item.title} src={item.img} alt={item.title} width={50} height={50} />;
      } else {
        return <img class={item.title} src={item.img} alt={item.title} width={50} height={50} />;
      }
    })
  }
</header>

<style>
  img {
    scale: 0.9;
    transition: scale 0.2s;
  }

  img:hover {
    scale: 1;
  }

  .band {
    height: 67.5px;
    width: 67.5px;
    margin: 2px 0;
    cursor: pointer;
  }

  .fatmusik {
    height: 50px;
    width: 50px;
  }

  .menu {
    height: 64px;
    width: 64px;
    cursor: pointer;
  }

  header {
    background-color: whitesmoke;
    border-bottom: 1px solid rgb(50 50 50);
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
</style>
