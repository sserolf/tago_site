---
import TmTitle from 'src/components/Astro/TmTitle.astro';
import TmLink from 'src/components/Astro/TmLink.astro';

interface Props {
  dictionary: {
    title: string;
    mailTitle: string;
  };
  constants: {
    mailText: string;
    mailUrl: string;
    instagramTitle: string;
    instagramText: string;
    instagramUrl: string;
  };
}

const { dictionary, constants } = Astro.props;
---

<TmTitle title={dictionary.title} />
<div class="container">
  <div class="column">
    <span>{dictionary.mailTitle + ':'}</span>
    <TmLink classes="contact" href={constants.mailUrl}>
      <span>{constants.mailText}</span>
    </TmLink>
  </div>
  <div class="column">
    <span>{constants.instagramTitle + ':'}</span>
    <TmLink classes="contact" href={constants.instagramUrl}>
      <span>{constants.instagramText}</span>
    </TmLink>
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
  }

  .column {
    display: flex;
    justify-content: space-between;
    margin: 5px 0;
  }
</style>
