---
import { type Gig } from '../types/gigs';
import { formatUpcomingGigsDates } from 'src/utils/gigsUtils';

interface Props {
  data: Gig[];
  locale: string;
}

const { data, locale } = Astro.props;

const formattedData = formatUpcomingGigsDates(data, locale);
---

{
  formattedData.map((gig) => {
    return (
      <li>
        <>
          {gig.url ? (
            <a href={gig.url} target="_blank">
              <span>{gig.name}</span>
            </a>
          ) : (
            <span>{gig.name}</span>
          )}
        </>
        <span>{gig.dateToShow}</span>
      </li>
    );
  })
}

<style>
  a {
    color: darkblue;
  }

  a:hover {
    color: #06f;
  }

  li {
    display: flex;
    justify-content: space-between;
    min-height: 48px;
    align-items: center;
  }
</style>
