---
import TmLink from './TmLink.astro';
import TmImage from './TmImage.astro';
import type { AvailableLanguages } from 'src/types/language';

interface Props {
  data: {
    img: string;
    title: string;
    url: string;
  }[];
  language: AvailableLanguages;
}

const { data, language } = Astro.props;
if (language !== 'ES') {
  data.map((item) => {
    item.img = '../' + item.img;
  });
}
---

<div>
  {
    data.map((item) => (
      <TmLink href={item.url}>
        <TmImage classes="socialItem" src={item.img} alt={item.title} />
      </TmLink>
    ))
  }
</div>

<style>
  div {
    background-color: whitesmoke;
    border-top: 1px solid rgb(50 50 50);
    height: 70px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0px 15px;
  }
</style>
