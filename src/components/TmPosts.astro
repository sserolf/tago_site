  button {
    border-color: black;
    border-radius: 6px;
    color: black;
    font-size: 15px;
    margin: 10px 0;
    padding: 10px;
    width: 100%;
    cursor: pointer;
    scale: 1;
    transition: scale 0.2s;
  }

  button:hover {
    scale: 1.01;
  }

  .post {
    margin: 10px 0;
  }
</style>
