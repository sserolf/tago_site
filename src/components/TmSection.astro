---
interface Props {
  id?: string;
}

const { id } = Astro.props;
---

<section id={id}><slot /></section>

<style>
  section {
    background-color: rgb(255 255 255 / 80%);
    border-radius: 10px;
    padding: 10px;
    max-width: 800px;
    margin: 0 auto;
    margin-bottom: 10px;
  }

  section:last-child {
    margin-bottom: 0;
  }
</style>
